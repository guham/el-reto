doctype html
html.bg-grey-lightest.antialiased
    include header
    body
        div.bg-white.border-b.border-grey-lighter.w-full
            div.flex.items-center.h-16
                div(class='w-full text-center')
                    a(href='/')
                        h1(class='text-black' title='Inicio')= title
        div
            div(class='flex h-screen pb-8 max-h-80')
                div(class='w-1/3')
                div(class='w-1/3 overflow-y-scroll p-2' id='messages')
                div(class='w-1/3')
        div(class='w-full')
            div.flex.items-center.h-16
                div(class='w-1/3')
                form(action='/send' method='POST' class="w-full max-w-sm")
                    div(class='flex items-center py-2 border-b border-b-2 border-blue')
                        textarea#message(placeholder='Escribe tus dudas' name='q', rows='1' class='appearance-none bg-transparent border-none w-full text-grey-darker mr-3 py-1 px-2')
                        button#send(type='submit' class='bg-blue hover:bg-blue-dark text-white font-bold py-2 px-4 rounded') Enviar
                div(class='w-1/3')
        script(src='app.js')
